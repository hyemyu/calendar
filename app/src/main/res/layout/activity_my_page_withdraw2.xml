<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.mypage.MyPageWithdraw2">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="133dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="탈퇴하고자 하는 이유를 알려주세요"
                android:textColor="#2B2B2B"
                android:textFontWeight="700"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="소중한 의견을 들려주세요.\n
이다은 님이 유어웨더로 다시 돌아올 수 있도록 더 발전해볼게요."
                android:textColor="#ACACAC"
                android:textFontWeight="500"
                android:layout_marginBottom="33dp"
                android:textSize="13sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radio_grp">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardregular"
                    android:text="기록이 번거로워요"
                    android:textColor="#2B2B2B"
                    android:textFontWeight="400"
                    android:theme="@style/CustomRadioTheme"
                    android:textSize="13sp"
                    />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardregular"
                    android:text="기록을 모두 삭제하고 싶어요"
                    android:textColor="#2B2B2B"
                    android:textFontWeight="400"
                    android:theme="@style/CustomRadioTheme"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardregular"
                    android:text="디자인이 마음에 안 들어요"
                    android:textColor="#2B2B2B"
                    android:textFontWeight="400"
                    android:theme="@style/CustomRadioTheme"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardregular"
                    android:text="유어웨더 앱 사용도가 낮아요"
                    android:textColor="#2B2B2B"
                    android:textFontWeight="400"
                    android:theme="@style/CustomRadioTheme"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/radio_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardregular"
                    android:text="유어웨더에서 내 개인정보를 삭제하고 싶어요"
                    android:textColor="#2B2B2B"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    android:theme="@style/CustomRadioTheme"
                    android:layout_marginBottom="340dp"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="#00ff0000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/btn_withdraw1" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00ff0000"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/pretendardregular"
                        android:text="탈퇴하기"
                        android:textColor="#FFFFFF"
                        android:textFontWeight="400"
                        android:textSize="16sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/imageButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/btn_withdraw2" />

                    <Button
                        android:id="@+id/btn_choiceCancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#00ff0000"
                        android:fontFamily="@font/pretendardregular"
                        android:text="취소"
                        android:textColor="#FFFFFF"
                        android:textFontWeight="400"
                        android:textSize="16sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>







    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>